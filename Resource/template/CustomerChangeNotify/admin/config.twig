{% extends '@admin/default_frame.twig' %}

{% set menus = ['setting', 'customer_change_notify'] %}

{% block title %}会員情報変更通知設定{% endblock %}
{% block sub_title %}設定{% endblock %}

{% form_theme form '@admin/Form/bootstrap_4_horizontal_layout.html.twig' %}

{% block main %}
    {{ include('@admin/alert.twig') }}

    <form name="form1" role="form" id="form1" method="post" action="">
        {{ form_widget(form._token) }}

        <div class="c-contentsArea__cols">
            <div class="c-contentsArea__primaryCol">
                <div class="c-primaryCol">
                    <div class="card rounded border-0 mb-4">
                        <div class="card-header">
                            <span class="card-title">会員情報変更通知設定</span>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-12">
                                    {{ form_row(form.admin_to) }}
                                    <p class="text-muted small mb-3">
                                        空欄の場合は、店舗設定のメールアドレスに通知が送信されます。
                                    </p>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12">
                                    {{ form_row(form.admin_subject) }}
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12">
                                    {{ form_row(form.member_subject) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="c-conversionArea">
            <div class="c-conversionArea__container">
                <div class="row justify-content-between align-items-center">
                    <div class="col-6">
                        <div class="c-conversionArea__leftBlockItem">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="row align-items-center justify-content-end">
                            <div class="col-auto">
                                <button type="submit" class="btn btn-ec-conversion px-5">
                                    登録
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
